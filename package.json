{
  "name": "configs",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:scss": "sass --watch ./scss:./css",
    "dev:ts": "tsc --watch",
    "prettier:check": "prettier --check ./*",
    "prettier:write": "prettier --write ./*",
    "lint": "eslint '**/*.{ts,tsx}'",
    "stylelint": "stylelint --cache \"**/*.scss\"",
    "stylelint:fix": "stylelint --fix --cache \"**/*.scss\"",
    "prepare": "husky install",
    "build:styles": "npm run build:scss && chalk dim cyanBright \"Applying css-optimization...\" && npm run build:postcss && chalk bold green \"Files have been compiled successfully!\"",
    "build:scss": "chalk dim cyanBright \"Linting...\" && npm run stylelint && chalk dim cyanBright \"Compiling scss-Files...\" && sass ./scss/:./dist/css",
    "build:postcss": "postcss ./dist/css/style.css -d css",
    "watch": "onchange \"**/*.scss\" -k -i -- npm run build:styles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "autoprefixer": "^10.4.5",
    "browserslist": "^4.20.3",
    "chalk-cli": "^5.0.0",
    "cssnano": "^5.1.9",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-testing-library": "^5.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "sass": "^1.52.1",
    "stylelint": "^14.8.4",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-no-unsupported-browser-features": "^5.0.3",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "onchange": "^7.1.0"
  }
}
